{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++20",
                "${workspaceFolder}/*.cc",
                "-o",
                "${fileDirname}/sim_cache"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "build all *.cc files"
        },
        {
            "type": "shell",
            "label": "run the makefile",
            "command": "/usr/bin/make",
            "args": [],
            "problemMatcher": [],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}